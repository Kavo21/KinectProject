<Window x:Class="Kinect_v2_Learning.Face_Features"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_v2_Learning"
        mc:Ignorable="d"
        Title="Face_Features"  Height="1080" Width="1920" Loaded="Window_Loaded"  WindowState="Maximized" Closing="Window_Closing">
    <Viewbox>
        <Grid>
            <Image x:Name="camera" d:IsHidden="False" />
            <Canvas x:Name="canvas" d:IsHidden="True">
                <Ellipse x:Name="ellipseEyeLeft" Style="{StaticResource EyeStyle}" d:IsHidden="True" />
                <Ellipse x:Name="ellipseEyeRight" Style="{StaticResource EyeStyle}" d:IsHidden="True" />
                <Ellipse x:Name="ellipseNose" Style="{StaticResource NoseStyle}" d:IsHidden="True" />
                <Ellipse x:Name="ellipseMouth" Style="{StaticResource MouthStyle}" d:IsHidden="True" />
                <Ellipse x:Name="ellipseMouth_right" Style="{StaticResource Mouth_Rigth_Style}" d:IsHidden="True" />
            </Canvas>
        </Grid>
    </Viewbox>

</Window>
